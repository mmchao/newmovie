.head{
  position: fixed;
  top: 0;
  z-index: 10;
  background-color: rgb(255, 255, 255);
  width: 100%
}
.title{
  padding: 20rpx;
  display: flex;
  font-size: 30rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #c7c7c7
}
.title .nm {
  font-size: 36rpx;
  font-weight: bold;
}
.score{
  font-size: 24rpx;
  color: #c7c7c7;
  padding: 30rpx;
  text-align: center;
  border-bottom: 1px solid #c7c7c7
}

.score .hint{
  padding-top: 10rpx;
}
.score .my-sc{
  padding-top: 10rpx;
  color: #fc0;
}

.text{
  padding: 280rpx 30rpx 80rpx;
  font-size: 30rpx;
}
textarea{
  width: 100%;
}
.img{
  padding-left: 30rpx;
  padding-bottom: 80rpx;
}
image{
  width: 210rpx;
  height: 210rpx;
  padding-right: 30rpx;
}
.add-img{
  position: fixed;
  bottom: 0;
  right: 30rpx;
  z-index: 11;
}
.footer{
  width: 100%;
  height: 30rpx;
  padding: 20rpx;
  position: fixed;
  bottom: 0;
  text-align: center;
  font-size: 24rpx;
  color: #a7a7a7;
  background-color: #ffffff;
  z-index: 10
}

